<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.masanz.prog.pintar.controller.MainController"
            stylesheets="@pintar.css"
            maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="768.0" prefWidth="1024.0">

    <center>
        <Pane fx:id="paneCanvas" BorderPane.alignment="CENTER">
            <children>
                <Canvas fx:id="canvas" height="800.0" width="1152.0" />
            </children>
        </Pane>
    </center>
    <bottom>
        <HBox fillHeight="false" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnPintar" mnemonicParsing="false" onAction="#pinta" text="Pintar" />
                <Button fx:id="btnMueveIzda" mnemonicParsing="false" onAction="#mueveIzquierda" text="Izquierda" />
                <Button fx:id="btnMueveDcha" mnemonicParsing="false" onAction="#mueveDerecha" text="Derecha" />
                <Button fx:id="btnMueveArriba" mnemonicParsing="false" onAction="#mueveArriba" text="Arriba" />
                <Button fx:id="btnMueveAbajo" mnemonicParsing="false" onAction="#mueveAbajo" text="Abajo" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>

</BorderPane>
